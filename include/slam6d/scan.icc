/**
 * Resets the pose of the scan to identity
 */
inline void Scan::resetPose()
{
  double tinv[16];
  M4inv(transMat, tinv);
  transform(tinv, INVALID);
  
  Matrix4ToEuler(transMat, rPosTheta, rPos);
  
  M4identity(dalignxf);
}

