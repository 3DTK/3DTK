/**
 * Overridden "<<" operator for sending a scan to a stream
 */
inline ostream& operator<<(ostream& os, Scan& s)
{
#ifndef WITH_SCANSERVER
  for (unsigned int i = 0; i < s.points.size(); i++) {
    os << s.points[i] << endl;
#else //WITH_SCANSERVER
  DataXYZ xyz(s.getXYZ());
  for(unsigned int i = 0; i < xyz.size(); ++i) {
    os << xyz[i][0] << " " << xyz[i][1] << " " << xyz[i][2] << endl;
#endif //WITH_SCANSERVER
  }
  return os;
}

